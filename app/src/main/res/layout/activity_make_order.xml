<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e1e1"
    tools:context="com.start.laundryapp.MakeOrder">

    <TextView
        android:id="@+id/makeOrder_appName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appTitle"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/makeOrder_appName_logo"
        tools:ignore="ContentDescription"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/laundryicon"
        android:layout_below="@+id/makeOrder_appName_tv"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/makeOrder_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/makeorder_title_tv"
        android:layout_below="@+id/makeOrder_appName_logo"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/makeOrderData_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/makeOrder_title_tv"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/makeOrder_clothesCount_et"
                android:textSize="18sp"
                android:layout_weight="1"
                android:labelFor="@+id/makeOrder_clothesCount_et"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/makeOrder_clothesCount_et"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="number"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/yenisifarish_achiqlama_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/makeOrder_terminalPoint_tv"
                android:labelFor="@+id/yenisifarish_menteqe_sp"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/makeOrder_terminalPoint_sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textColor="#000000"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/makeOrder_orderType_tv"
                android:textSize="18sp"
                android:layout_weight="1"
                android:labelFor="@+id/makeOrder_orderType_sp"
                android:textColor="@android:color/black"
                />
            <Spinner
                android:id="@+id/makeOrder_orderType_sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textColor="#000000"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/icra_muddeti_ll">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/makeOrder_executionType_tv"
                android:textSize="18sp"
                android:layout_weight="1"
                android:labelFor="@+id/makeOrder_executionType_sp"
                android:textColor="@android:color/black"
                />
            <Spinner
                android:id="@+id/makeOrder_executionType_sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textColor="#000000"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                />


        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

             <TextView
                 android:id="@+id/makeOrder_note_tv"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:labelFor="@+id/makeOrder_note_et"
                 android:text="@string/makeOrder_note_tv"
                 android:textColor="@android:color/black"
                 android:textSize="18sp" />

             <EditText
                android:id="@+id/makeOrder_note_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/makeOrder_btn"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makeOrderData_ll"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/makeOrder_btn_text"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/makeOrder_addPhoto_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:src="@drawable/addbutton"
        tools:ignore="ContentDescription"
        android:layout_alignTop="@+id/makeOrderData_ll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />



</RelativeLayout>
