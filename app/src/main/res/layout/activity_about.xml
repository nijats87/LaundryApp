<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e1e1"
    tools:context="com.start.laundryapp.About">

    <TextView
        android:id="@+id/about_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_About_title"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/about_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_title_tv"
        android:layout_margin="18dp"
        android:textSize="17sp"
        android:lineSpacingExtra="2dp"
        android:text="@string/app_About_text"
        android:textAlignment="center" />

</RelativeLayout>
